{% assign pageUrl = canonical_url | split: "/" | last %}

{% style %}

.sidebar-wrapper{
  margin-top: 10px;
}
.button-sidebar{
    width: 100%;
    margin-bottom: 8px;
    text-align: left;
    display:flex;
    justify-content:start;
    padding-left:30px;
    padding-top: 5px;
    align-items:center;
}
.sidebar-heading{
    margin-left: 5px;
}


{% endstyle %}

<div class = "sidebar-wrapper">
    <a href = "/account" class = "button {% if pageUrl == "account" %}custom-button-secondary_color {% else %}custom-button-secondary{% endif %}  button-sidebar">
        <span>
            {% render 'custom-icon-account-page', icon-name : 'account' %}
        </span>
        <span class = "sidebar-heading">Account Details</span>
    </a>

    <a href = "/pages/orders" class = "button {% if pageUrl == "orders" %}custom-button-secondary_color {% else %}custom-button-secondary{% endif %} button-sidebar" >
        <span>
            {% render 'custom-icon-account-page', icon-name : 'orders' %}
        </span>
        <span class = "sidebar-heading">My Orders</span>
    </a>
 
    <a href = "/account/addresses" class = "button {% if pageUrl == "addresses" %}custom-button-secondary_color {% else %}custom-button-secondary{% endif %} button-sidebar" >
        <span>
            {% render 'custom-icon-account-page', icon-name : 'address' %}
        </span>
        <span class = "sidebar-heading">View Address</span>
    </a>

    <a href = "#" class = "button custom-button-secondary button-sidebar" >
        <span>
            {% render 'custom-icon-account-page', icon-name : 'wishlist' %}
        </span>
        <span class = "sidebar-heading">Wishlist</span>
    </a>

    <a href = "#" class = "button custom-button-secondary button-sidebar" >
        <span>
            {% render 'custom-icon-account-page', icon-name : 'need-help' %}
        </span>
        <span class = "sidebar-heading">Need Help?</span>
    </a>

    <a href="{{ routes.account_logout_url }}" class = "button custom-button-secondary button-sidebar" >
        <span>
            {% render 'custom-icon-account-page', icon-name : 'signout' %}
        </span>
        <span class = "sidebar-heading">Sign Out</span>
    </a>

</div>
