{{ 'custom-usp.css' |  asset_url |  stylesheet_tag }} 

{% style %}
  .padding-{{ section.id }} {
    padding-top: {{ section.settings.padding_top | divided_by: 2 }}px;
    padding-bottom: {{ section.settings.padding_bottom | divided_by: 2 }}px;
  }

  @media only screen and (min-width: 750px) {
    .padding-{{ section.id }} {
      padding-top: {{ section.settings.padding_top }}px;
      padding-bottom: {{ section.settings.padding_bottom }}px;
    }
   }
{% endstyle %}



<div class="custom-usp padding-{{ section.id }}">
    <div class="page-width">
        <div class="grid grid--1-col grid--4-col-desktop grid--4-col-tablet color-{{ section.settings.color_scheme }}">
           {% for block in section.blocks %}
                {% if block.settings.svg_tag != blank %}
                    <div class="grid__item custom-usp__card custom-usp__text-alignment-{{block.id}}">
                        {% if block.settings.svg_tag != blank %}
                            <div class = "custom-usp__icon">{{ block.settings.svg_tag }}</div>
                        {% endif %}  
                        {% if block.settings.heading != blank %}
                            <div class = "h3">{{ block.settings.heading }}</div>
                        {% endif %}  
                        {% if block.settings.description != blank %}
                            <p >{{ block.settings.description }}</p>
                        {% endif %}  
                    </div>
                {% else %}     
                    <div class="grid__item">
                        <div class="media media--square">
                            {{ 'product-1'  | placeholder_svg_tag }}
                        </div>
                    </div>
                {% endif %}  
                <style>
                    .custom-usp__text-alignment-{{block.id}}{
                        text-align: {{ block.settings.text_alignment }};
                    }                  
                    @media only screen and (max-width: 750px) {
                        .custom-usp__text-alignment-{{block.id}}{
                            text-align: {{ block.settings.text_alignment_mobile }};
                        }
                    }
                      
                </style>   
            {% else %} 
                {% for i in (1..4) %}
                    <div class="grid__item">
                        <div class="media media--square">
                            {{ 'product-' | append: i | placeholder_svg_tag }}
                        </div>
                    </div>
                {% endfor %} 
           {% endfor %} 
        </div>
    </div>
</div>



{% schema %}
{
  "name": "Custom USP Section",
  "settings": [
    {
        "type": "color_scheme",
        "id": "color_scheme",
        "default": "Scheme 2",
        "label": "Color Scheme"
    },
    {
      "type": "header",
      "content": "Adjust Section padding"
    },
    {
      "type": "range",
      "id": "padding_top",
      "min": 0,
      "max": 100,
      "step": 1,
      "unit": "px",
      "label": "Padding top",
      "default": 36
    },
    {
      "type": "range",
      "id": "padding_bottom",
      "min": 0,
      "max": 100,
      "step": 1,
      "unit": "px",
      "label": "Padding bottom",
      "default": 36
    }
  ],
  "blocks": [
    {
      "type": "grid-items",
      "name": "Grid Items",
      "settings": [
        {
            "type": "html",
            "id": "svg_tag",
            "label": "Add SVG Element"
        },
        {
            "type": "text",
            "id": "heading",
            "label": "Heading",
            "default": "Daily deals"
          },
          {
            "type": "richtext",
            "id": "description",
            "label": "Description",
            "default": "<p>that bring a touch of excitement to your everyday shopping experience.</p>"
          },          
          {
            "type": "select",
            "id": "text_alignment",
            "label": "Text Alignment",
            "options": [
              {
                "value": "left",
                "label": "Left"
              },
              {
                "value": "center",
                "label": "Center"
              },
              {
                "value": "Right",
                "label": "Right"
              }
            ],
            "default": "center"
          },
          {
            "type": "select",
            "id": "text_alignment_mobile",
            "label": "Text Alignment (Mobile)",
            "options": [
              {
                "value": "left",
                "label": "Left"
              },
              {
                "value": "center",
                "label": "Center"
              },
              {
                "value": "Right",
                "label": "Right"
              }
            ],
            "default": "center"
          }
      ]
    }
  ],
  "presets": [
    {
      "name": "Custom USP Section"
    }
  ]
}
{% endschema %}