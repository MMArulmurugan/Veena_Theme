{% comment %} {{ 'custom-image-grid.css' |  asset_url |  stylesheet_tag }}  {% endcomment %}

{% style %}
  .padding-{{ section.id }} {
    padding-top: {{ section.settings.padding_top | divided_by: 2 }}px;
    padding-bottom: {{ section.settings.padding_bottom | divided_by: 2 }}px;
  }

  @media only screen and (min-width: 750px) {
    .padding-{{ section.id }} {
      padding-top: {{ section.settings.padding_top }}px;
      padding-bottom: {{ section.settings.padding_bottom }}px;
    }
   }
   .custom-bundle{
    display:flex;
    justify-content:center;
    align-items:center;
   }
   .custom-bundle-container{
    border: 1px solid #d03c3f;
    padding: 30px;
    box-sizing:border-box;
    width: 80%;
    display:flex;
    justify-content:center;
    align-items:center;
    margin-top:25px;
   }
   .custom-bundle_add-icon{
    display:flex;
    flex-direction:column;
    justify-content:center;
    align-items:center;
   }
{% endstyle %}

{% if section.blocks.size > 0  %}
    
    <div class=" padding-{{ section.id }}">
      <h2 class = "page-width h1x">{{ section.settings.bundle_title }}</h2>
        <div class="page-width custom-bundle">
            <div class="custom-bundle-container custom-border-radius grid grid--3-col ">
                {% for block in section.blocks %}
                    {% render 'custom-bundle-card', product: block.settings.product, section_id: section.id %}
                    <div class = "custom-bundle_add-icon">
                      {% unless forloop.last %}
                        {% render 'custom-icon-account-page', icon-name : 'custom-plus' %}
                      {% endunless %}
                    </div>
                {% endfor %} 
                <button>Add to cart</button>
            </div>

        </div>
    </div>
{% endif %}


{% schema %}
{
  "name": "Custom Bundle",
  "tag" : "section",
  "settings": [
    {
      "type": "text",
      "id": "bundle_title",
      "label": "Bundle Heading",
      "default": "Frequently bought together"
    },
    {
      "type": "header",
      "content": "Adjust Section padding"
    },
    {
      "type": "range",
      "id": "padding_top",
      "min": 0,
      "max": 100,
      "step": 1,
      "unit": "px",
      "label": "Padding top",
      "default": 36
    },
    {
      "type": "range",
      "id": "padding_bottom",
      "min": 0,
      "max": 100,
      "step": 1,
      "unit": "px",
      "label": "Padding bottom",
      "default": 36
    }
  ],
  "blocks": [
    {
      "type": "product",
      "name": "Bundle Product",
      "settings": [
         {
            "type": "product",
            "id": "product",
            "label": "Product"
         }
      ]
    }
  ],
  "presets": [
    {
      "name": "Custom Bundle"
    }
  ]
}
{% endschema %}



